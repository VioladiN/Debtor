<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/stats_variant_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_stats_linear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/stats_variant_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_stats_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stats_variant_linear" />

    <FrameLayout
        android:id="@+id/ll_diagram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/stats_variant_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <com.violadin.debtorpit.ui.views.CircleDiagramView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:colorPrimaryCircle="@color/base_UI"
            app:colorSecondaryCircle="@color/base_UI_mute" />

        <com.violadin.debtorpit.ui.views.LinearDiagramView
            android:id="@+id/linear_diagram_view"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:visibility="gone"
            app:colorPrimaryColumn="@color/base_UI"
            app:colorSecondaryColumn="@color/base_UI_mute" />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/debt_for_me_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_diagram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.violadin.debtorpit.ui.views.SmallCircleDiagramView
                android:id="@+id/debt_for_me_diagram"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="8dp"
                app:colorPrimary="@color/base_UI"
                app:colorSecondary="@color/base_UI_mute"
                app:strokeWidth="5dp"
                app:startAngle="90"
                app:spaceBetweenArcs="15"
                app:textColor="@color/gray_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/debt_for_me_first_title"
                android:textSize="20sp"
                android:textColor="@color/base_text"
                android:fontFamily="@font/roboto_400"
                android:text="@string/debt_for_me_one_line"
                android:layout_marginTop="14dp"
                android:layout_marginStart="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/debt_for_me_diagram" />

            <TextView
                android:id="@+id/debt_for_me_second_title"
                android:textColor="@color/gray_dark"
                android:fontFamily="@font/roboto_300"
                android:text="@string/show_debts_detail"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/debt_for_me_first_title"
                app:layout_constraintTop_toBottomOf="@id/debt_for_me_first_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/my_debt_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/debt_for_me_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.violadin.debtorpit.ui.views.SmallCircleDiagramView
                android:id="@+id/my_debt_diagram"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginVertical="8dp"
                app:colorPrimary="@color/base_UI"
                app:colorSecondary="@color/base_UI_mute"
                app:strokeWidth="5dp"
                app:startAngle="90"
                app:spaceBetweenArcs="15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/my_debt_first_title"
                android:textSize="20sp"
                android:textColor="@color/base_text"
                android:fontFamily="@font/roboto_400"
                android:text="@string/my_debt"
                android:layout_marginTop="14dp"
                android:layout_marginStart="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/my_debt_diagram" />

            <TextView
                android:id="@+id/my_debt_second_title"
                android:textColor="@color/gray_dark"
                android:fontFamily="@font/roboto_300"
                android:text="@string/show_debts_detail"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/my_debt_first_title"
                app:layout_constraintTop_toBottomOf="@id/my_debt_first_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>