<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_fragment</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonMainStyle.BlueButton">
        <item name="backgroundTint">@color/base_UI</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>